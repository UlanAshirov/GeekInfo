<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#c0c0c0"
    android:padding="12dp"
    android:fitsSystemWindows="true"
    tools:context=".aut.AutFragment">

    <TextView
        android:id="@+id/tvWelCum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:text="Добро Пожаловать"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgIconMyChat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/etContainer"
        android:src="@drawable/chat_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvWelCum" />

    <LinearLayout
        android:id="@+id/etContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/containerView"
        android:orientation="vertical"
        >

        <EditText
            android:padding="12dp"
            android:background="@drawable/circle_et_register"
            android:hint="Phone number"
            android:id="@+id/etNumberPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number" />

        <EditText
            android:padding="12dp"
            android:layout_marginVertical="12dp"
            android:background="@drawable/circle_et_register"
            android:hint="Password"
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/btnEnter"
            android:background="@drawable/circle_button_default"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:text="Войти"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/containerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/btnRegister">

        <View
            android:layout_gravity="center"
            android:layout_width="170dp"
            android:background="@color/black"
            android:layout_height="2dp"/>

        <TextView
            android:textColor="@color/blue"
            android:textStyle="bold"
            android:fontFamily="sans-serif-condensed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginHorizontal="10dp"
            android:text="OR"/>

        <View
            android:layout_gravity="center"
            android:layout_width="170dp"
            android:background="@color/black"
            android:layout_height="2dp"/>
    </LinearLayout>

    <Button
        android:id="@+id/btnRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/circle_button_blue"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Зарегистрироваться"/>
</androidx.constraintlayout.widget.ConstraintLayout>